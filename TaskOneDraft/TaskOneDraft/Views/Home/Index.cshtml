@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - Contract Monthly Claim System (CMCS)</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Include Bootstrap CSS and JavaScript -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  
       
</head>



<body>
    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <h1>Welcome to the Contract Monthly Claim System (CMCS)</h1>
             <p>Streamline your claims and contract management for contractors.</p> 
            <a href="/Lecturer/Dashboard" class="btn btn-light btn-lg mt-4">Get Started</a>
        </div>
    </section>

    <div id="carExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <!-- image1 -->
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Images/lec1.gif" alt="First slide" />
            </div>

            <!-- image2 -->
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/lec2.gif" alt="Second slide" />
            </div>

            <!-- image3 -->
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/lec3.gif" alt="Third slide" />
            </div>
        </div>

        <!-- Previous slide control -->
        <a class="carousel-control-prev" href="#carExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>

        <!-- Next slide control -->
        <a class="carousel-control-next" href="#carExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!-- Features Section -->
    <section class="feature-section">
        <div class="container text-center">
            <h2 class="mb-5">Features of CMCS</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="card p-4">
                        <img src="~/images/Lecturer.jpg" alt="Lecturer Dashboard" style="width: 80px;" class="mx-auto">
                        <h4 class="mt-3">Lecturer Dashboard</h4>
                        <p>Easily view contracts, submit claims, and track your status through a modern dashboard.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card p-4">
                        <img src="~/images/Admin1.jpg" alt="Admin Tools" style="width: 80px;" class="mx-auto">
                        <h4 class="mt-3">Admin Tools</h4>
                        <p>Admins can review claims, approve them, and manage payments efficiently with clear workflows.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card p-4">
                        <img src="~/images/Admin2.jpg" alt="Payment Processing" style="width: 80px;" class="mx-auto">
                        <h4 class="mt-3">Payment Processing</h4>
                        <p>Streamline the entire payment process for approved claims with simple processing and reports.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer Section -->
    <footer>
        <div class="container text-center">
            <p>&copy; @DateTime.Now.Year Contract Monthly Claim System (CMCS). All rights reserved.</p>
            <p>Need help? <a href="/Home/Contact">Contact Support</a></p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
